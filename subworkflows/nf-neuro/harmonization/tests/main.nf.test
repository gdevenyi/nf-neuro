nextflow_workflow {

    name "Test Subworkflow HARMONIZATION"
    script "../main.nf"
    workflow "HARMONIZATION"

    config "../nextflow.config"

    tag "subworkflows"
    tag "subworkflows_nfneuro"
    tag "subworkflows/harmonization"
    tag "load_test_data"

    tag "harmonization"
    tag "harmonization/formatstats"
    tag "harmonization/clinicalcombat"

    tag "stub"
    options "-stub-run"

    setup {
        run("LOAD_TEST_DATA", alias: "LOAD_DATA") {
            script "../../load_test_data/main.nf"
            process {
                """
                input[0] = Channel.from( [ "harmonization.zip" ] )
                input[1] = "test.load-test-data"
                """
            }
        }
    }

    test("harmonization - subworkflow") {
        tag "here"
        config './stubs.config'
        when {
            // The workflow should be able to process files coming from the bundle/stats or stats/metricsinroi
            // which are structured differently.
            workflow {
                """
                input[0] = LOAD_DATA.out.test_data_directory.map{
                    test_data_directory ->
                        file("\${test_data_directory}/CamCAN_11subs_ad_adt.tsv", checkIfExists: true)

                }
                input[1] = LOAD_DATA.out.test_data_directory.map{
                    test_data_directory ->
                        file("\${test_data_directory}/CamCANmodified_11subs_ad_adt.tsv", checkIfExists: true)

                }
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(
                    workflow.out.harmonized_metrics,
                    workflow.out.figures,
                    workflow.out.model,
                    workflow.out.qc_reports,
                    workflow.out.versions
                ).match() }
            )
        }
    }
}
