nextflow_process {

    name "Test Process ATLAS_IIT"
    script "../main.nf"
    process "ATLAS_IIT"

    tag "modules"
    tag "modules_nfneuro"
    tag "atlas"
    tag "atlas/iit"

    test("atlas - iit") {
        when {
            process {
                """
                input[0]=Channel.of([])
                input[1]=Channel.of([])
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.bundles,
                    process.out.b0,
                    process.out.versions
                ).match() }
            )
        }
    }
    test("atlas - iit - stub-run") {
        tag "stub"
        options "-stub-run"

        when {
            process {
                """
                input[0]=Channel.of([])
                input[1]=Channel.of([])
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.versions).match() }
            )
        }
    }
}
