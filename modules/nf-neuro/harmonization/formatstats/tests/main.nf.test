nextflow_process {

    name "Test Process HARMONIZATION_FORMATSTATS"
    script "../main.nf"
    process "HARMONIZATION_FORMATSTATS"

    tag "modules"
    tag "modules_nfneuro"
    tag "harmonization"
    tag "harmonization/formatstats"

    test("formatstats - format stats input") {
        when {
            process {
                """
                input[0] = file('/home/local/USHERBROOKE/levj1404/Documents/clinical-ComBAT/CamCAN7modified.tsv.gz', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("formatstats - format stats output") {
        when {
            config './inverse.config'
            process {
                """
                input[0] = [
                    file('/home/local/USHERBROOKE/levj1404/Documents/nf-neuro/tests/.runs/tests/c36522bd37bed5a72447be453fcd9e52/work/2e/97c970d6da43dea614f8b10d968740/CamCANmodified.ad.clinic.harmonized.csv.gz', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
