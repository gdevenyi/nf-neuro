nextflow_process {

    name "Test Process HARMONIZATION_FORMATSTATS"
    script "../main.nf"
    process "HARMONIZATION_FORMATSTATS"

    tag "modules"
    tag "modules_nfneuro"
    tag "harmonization"
    tag "harmonization/formatstats"

    setup {
        run("LOAD_TEST_DATA", alias: "LOAD_DATA") {
            script "../../../../../subworkflows/nf-neuro/load_test_data/main.nf"
            process {
                """
                input[0] = Channel.from( [ "harmonization.zip" ] )
                input[1] = "test.load-test-data"
                """
            }
        }
    }

    test("formatstats - format stats input") {
        when {
            process {
                """
                input[0] = LOAD_DATA.out.test_data_directory.map{
                    test_data_directory ->
                        file("\${test_data_directory}/CamCAN_11subs_ad_adt.tsv", checkIfExists: true)
                    }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("formatstats - format stats output") {
        when {
            config './inverse.config'
            process {
                """
                input[0] = LOAD_DATA.out.test_data_directory.map{
                    test_data_directory -> [
                        file("\${test_data_directory}/CamCANmodified.ad.clinic.harmonized.csv.gz"),
                        file("\${test_data_directory}/CamCANmodified.adt.clinic.harmonized.csv.gz")
                    ]
                }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
