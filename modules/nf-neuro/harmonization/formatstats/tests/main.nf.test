nextflow_process {

    name "Test Process HARMONIZATION_FORMATSTATS"
    script "../main.nf"
    process "HARMONIZATION_FORMATSTATS"

    tag "modules"
    tag "modules_nfneuro"
    tag "harmonization"
    tag "harmonization/formatstats"

    setup {
        run("LOAD_TEST_DATA", alias: "LOAD_DATA") {
            script "../../../../../subworkflows/nf-neuro/load_test_data/main.nf"
            process {
                """
                input[0] = Channel.from( [ "harmonization.zip" ] )
                input[1] = "test.load-test-data"
                """
            }
        }
    }

    test("formatstats - format stats input") {
        when {
            process {
                """
                input[0] = Channel.fromPath("/home/local/USHERBROOKE/levj1404/Documents/clinical-ComBAT/11subs/CamCAN11subs_simple.tsv")
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("formatstats - format stats output") {
        when {
            config './inverse.config'
            process {
                """
                input[0] = [
                    file('/home/local/USHERBROOKE/levj1404/Documents/clinical-ComBAT/11subs/CamCANmodified.ad.clinic.harmonized.csv.gz', checkIfExists: true),
                    file('/home/local/USHERBROOKE/levj1404/Documents/clinical-ComBAT/11subs/CamCANmodified.adt.clinic.harmonized.csv.gz', checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
