nextflow_process {

    name "Test Process HARMONIZATION_STATS2COMBAT"
    script "../main.nf"
    process "HARMONIZATION_STATS2COMBAT"

    tag "modules"
    tag "modules_nfneuro"
    tag "harmonization"
    tag "harmonization/stats2combat"

    tag "subworkflows/load_test_data"

    setup {
        run("LOAD_TEST_DATA", alias: "LOAD_DATA") {
            script "../../../../../subworkflows/nf-neuro/load_test_data/main.nf"
            process {
                """
                input[0] = Channel.from( [ "harmonization.zip" ] )
                input[1] = "test.load-test-data"
                """
            }
        }
    }

    test("harmonization - stats2combat - normal input") {
        when {
            process {
                """
                input[0] = LOAD_DATA.out.test_data_directory.map{
                    test_data_directory ->
                        file("\${test_data_directory}/CamCAN_11subs_ad_adt.tsv", checkIfExists: true)
                    }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

    test("harmonization - stats2combat - stub-run") {
        tag "stub"
        options "-stub-run"
        tag "here"

        when {
            process {
                """
                input[0] = LOAD_DATA.out.test_data_directory.map{
                    test_data_directory ->
                        file("\${test_data_directory}/CamCAN_11subs_ad_adt.tsv", checkIfExists: true)
                    }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.stats_for_combat.get(0).collect { f -> file(f).name},
                    process.out.versions).match() }
            )
        }
    }
}
